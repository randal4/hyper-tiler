{
  "manifest_version": 2,

  "name": "Hyper Tiler",
  "description": "Hyper Tiler allows you to open links in new windows spaced evenly around your monitor.",
  "version": "0.0.0.1",
  "background" : { "scripts": ["background.js"] },
  "icons": {
    "16": "./icons/icon.png",
    "48": "./icons/icon.png",
    "128": "./icons/icon.png"
  },
  "permissions" : [
    "contextMenus",
    "storage"
  ],
   "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
